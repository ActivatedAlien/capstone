<form>
    <div class="row">
        <div class='col-sm-6'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" name="event[time]" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    </div>

  <label>Address: </label>
  <input type='text' name='event[address]' value='<%= event.escape('address') %>'> <br>

  <label>Number of Available Spots: </label>
  <input type='text' name='event[num_slots]' value='<%= event.escape('num_slots') %>'> <br>

  <label>Description: </label>
  <textarea name="event[description]"><%= event.escape('description') %></textarea>

  <input type='submit' value='Create Event'>
</form>
